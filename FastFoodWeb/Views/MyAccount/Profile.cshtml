@using FastFoodWeb.Models
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Profile Page";
}


<div class="header-bg header-bg-page">
        <div class="header-padding position-relative">
            <div class="header-page-shape">
                <div class="header-page-shape-item">
                    <img src="~/images/header-shape-1.png" alt="shape">
                </div>
                <div class="header-page-shape-item">
                    <img src="~/images/header-shape-2.png" alt="shape">
                </div>
                <div class="header-page-shape-item">
                    <img src="~/images/header-shape-3.png" alt="shape">
                </div>
                <div class="header-page-shape-item">
                    <img src="~/images/header-shape-1.png" alt="shape">
                </div>
                <div class="header-page-shape-item">

                </div>
                <div class="header-page-shape-item">
                    <img src="~/images/header-shape-1.png" alt="shape">
                </div>

            </div>
            <div class="container">
                <div class="header-page-content">
                    <h1>My Account</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">My Account</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    @{
        string? acc = HttpContextAccessor.HttpContext.Session.GetString("Account");
        Account account = null;
        if (acc == null)
        {
            account = new Account { Email = "", Password = "", Phone = "", Name = "" };
        } else
        {
            account = JsonConvert.DeserializeObject<Account>(acc);
        }
    }

    <div class="account-page-section pt-100 pb-70 bg-black">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-4 col-lg-4 pb-30">
                    <div class="account-sidebar around-border">
                        <ul class="account-sidebar-list">
                            <li class="active"><a href="/MyAccount/Profile">My Account</a></li>
                            <li><a href="/MyAccount/Order">My Orders</a></li>
                            <li><a href="/Log/LogOut">Sign Out</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-8 col-lg-8 pb-30">
                    <div class="account-info">
                        <form action="/MyAccount/ChangeProfile" method="post">
                            <div class="account-setting-item">
                                <div class="sub-section-title">
                                    <h3 class="color-white">Edit Profile</h3>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-12 col-lg-6">
                                        <div class="form-group mb-20">
                                            <div class="input-group">
                                                <input type="text" name="name" id="name"
                                                    class="form-control" required placeholder="Name*" value="@account.Name" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12 col-lg-12">
                                        <div class="form-group mb-20">
                                            <div class="input-group">
                                                <input type="text" name="email" id="email" class="form-control" required
                                                    placeholder="Email*"  value="@account.Email"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12 col-lg-12">
                                        <div class="form-group mb-20">
                                            <div class="input-group">
                                                <input type="text" name="phone" id="phone" class="form-control" required
                                                    placeholder="Phone Number*"  value="@account.Phone" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="account-setting-item account-setting-button">
                                <button class="btn btn-small">Change Profile</button>
                            </div>
                        </form>
                        <form action="/MyAccount/ChangePassword" method="post">
                            <div class="account-setting-item account-setting-avatar">
                                <div class="sub-section-title">
                                    <h3 class="color-white">Change Password</h3>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-6 col-lg-6">
                                        <div class="form-group mb-20">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i
                                                            class="flaticon-login-1"></i></span>
                                                </div>
                                                <input type="password" name="curPassword" id="curPassword"
                                                    class="form-control password" placeholder="Current Password" />
                                                <div class="input-group-append">
                                                    <span class="input-group-text reveal">
                                                        <i class="flaticon-visibility pass-close"></i>
                                                        <i class="flaticon-eye pass-view"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-6 col-lg-6">
                                        <div class="form-group mb-20">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i
                                                            class="flaticon-login-1"></i></span>
                                                </div>
                                                <input type="password" name="password" id="password"
                                                    class="form-control password" placeholder="New Password" />
                                                <div class="input-group-append">
                                                    <span class="input-group-text reveal">
                                                        <i class="flaticon-visibility pass-close"></i>
                                                        <i class="flaticon-eye pass-view"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-6 col-lg-6">
                                        <div class="form-group m-0">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i
                                                            class="flaticon-login-1"></i></span>
                                                </div>
                                                <input type="password" name="confirm-password" id="confirm_password"
                                                    class="form-control password" placeholder="Confirm New Password" />
                                                <div class="input-group-append">
                                                    <span class="input-group-text reveal">
                                                        <i class="flaticon-visibility pass-close"></i>
                                                        <i class="flaticon-eye pass-view"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h4 id="message"></h4>
                            <div class="account-setting-item account-setting-button">
                                <button class="btn btn-small" id="submit">Change Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>